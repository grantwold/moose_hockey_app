<% provide(:title, "New Team") %>
<h1>New Team Creation</h1>
<div class="row-fluid form-horizontal">
	<div class="span 6">
		<%= simple_form_for @team do |f| %>
			<%= f.error_notification %>
			<%= f.input :name, label: "Name" %>

			<%= f.input :season_start, label: "Start of season", as: :date %>

			<%= f.input :season_end, label: "End of season", as: :date %>

			<%= f.association :players, label: "Select players", as: :check_boxes %>

			<%= f.error :base %>
			<%= f.submit "Create Team", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>

