<% provide(:title, "#{@team.name}") %>
<h1><%= "#{@team.name}" %></h1>
<div class="row-fluid">
	<div class="span8">
		<table class="table table-hover">
			<thead>
				<tr>
					<th>Number</th>
					<th>Name</th>
				</tr>
			</thead>
			<tbody>
				<% @players.each do |player| %>
					<tr> 
						<td><%= player.number %>
						<td><%= link_to "#{player.name}", player %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>