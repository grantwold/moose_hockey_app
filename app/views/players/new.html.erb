<% provide(:title, 'New Player') %>
<h1>New Player Creation</h1>
<div class="row-fluid">
	<%= form_for(@player) do |f| %>
		<%= render 'shared/error_messages' %>
		<div class="span3">
		</div>
		<div class="span3 offset2">
			<%= f.label :firstname, "First Name" %>
			<%= f.text_field :firstname %>
		</div>
		<div class="span3 offset1">
			<%= f.label :lastname, "Last Name" %>
			<%= f.text_field :lastname %>
		</div>
		<div class="span3">
		</div>
		<div class="row-fluid offset2">
			<div class="span1">
				<%= f.label :number %>
				<%= f.text_field :number %>
			</div>
			<div class="span1">
				<%= f.label :gamesplayed, "GP" %>
				<%= f.text_field :gamesplayed %>
			</div>
			<div class="span1">
				<%= f.label :goals %>
				<%= f.text_field :goals %>
			</div>
			<div class="span1">
				<%= f.label :assists %>
				<%= f.text_field :assists %>
			</div>
			<div class="span1">
				<%= f.label :shorthandedgoals, "SHG" %>
				<%= f.text_field :shorthandedgoals %>
			</div>
			<div class="span1">
				<%= f.label :powerplaygoals, "PPG" %>
				<%= f.text_field :powerplaygoals %>
			</div>
			<div class="span1">
				<%= f.label :penalties, "PIM" %>
				<%= f.text_field :penalties %>
			</div>
		</div>
		<div class="row-fluid offset4">
			<div class="span4">
			</div>
			<div class="span4">
				<%= f.submit "Create New Player", class: "btn btn-large btn-primary" %>
			</div>
			<div class="span4">
			</div>
		</div>
	<% end %>
</div>