<% provide(:title, "#{@player.name}") %>
<div class="row-fluid">
	<aside class="span5">
		<section>
			<%= render 'profile_picture' %>
			<div class="row-fluid">
				<div class="span8">
					<table class="table table-hover table-condensed">
						<thead>
							<tr>
								<th>Past Teams</th>
							</tr>
						</thead>
						<tbody>
							<% @teams.each do |team| %>
								<tr> 
									<td><%= link_to "#{team.name}", team %></td>
								</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			</div>
		</section>
	</aside>
	<div class="row-fluid">
		<div class="span7">
			<h1>
				<%= "#{@player.name}" %>
			</h1>
			<p>

			</p>
		</div>
	</div>
</div>