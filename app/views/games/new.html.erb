<%= provide(:title, "New Game") %>
<h1>Create a new game</h1>
<div class="row-fluid form-horizontal">
	<div class="span 6">
		<%= simple_form_for(@game) do |f| %>
			<%= f.error_notification %>
			<%= f.input :date, as: :datepicker %>
			<%= f.input :time, as: :string %>			
			<%= f.input :location %>			
			<%= f.input :opponent %>
			<%= f.input :official %>
			<%= f.input :scrimmage %>
			<%= f.input :practice %>
			<%= f.input :goals %>
			<%= f.input :assists %>
			<%= f.input :shorthandedgoals %>
			<%= f.input :powerplaygoals %>
			<%= f.input :penalties %>
			<%= f.error :base %>
			<%= f.submit "Create Game", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>