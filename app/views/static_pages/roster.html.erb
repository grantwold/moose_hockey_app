<% provide(:title, "Roster") %>
<h1>Roster</h1>
<div class="row-fluid">
	<div class="span9 offset3">
		<table class="table table-hover table-striped">
			<thead>
				<tr>
					<th>#</th>
					<th>Name</th>
					<th>Position</th>
				</tr>
			</thead>
			<tbody>
				<% @players.each do |player| %>
					<tr> 
						<td><%= player.number %></td>
						<td><%= link_to "#{player.name}", player %></td>
						<td><%= player.position %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>